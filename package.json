{
  "name": "root",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**/recoil"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Hyperting/hypertheme-editor.git"
  },
  "dependencies": {
    "@babel/core": "^7.16.0",
    "@babel/preset-env": "^7.16.0",
    "@babel/preset-typescript": "^7.16.0",
    "@chakra-ui/react": "^1.6.7",
    "@emotion/react": "^11.4.0",
    "@emotion/styled": "^11.3.0",
    "@rollup/plugin-commonjs": "^19.0.0",
    "@rollup/plugin-node-resolve": "^13.0.0",
    "@storybook/addon-actions": "^6.3.8",
    "@storybook/addon-essentials": "^6.3.8",
    "@storybook/addon-links": "^6.3.8",
    "@storybook/react": "^6.3.8",
    "@types/enzyme": "^3.10.10",
    "@types/jest": "^27.0.2",
    "@types/react": "^17.0.14",
    "@typescript-eslint/eslint-plugin": "4.12.0",
    "@typescript-eslint/parser": "4.12.0",
    "@wojtekmaj/enzyme-adapter-react-17": "^0.6.5",
    "babel-eslint": "10.1.0",
    "babel-jest": "^27.3.1",
    "babel-loader": "^8.2.2",
    "cpy-cli": "^3.1.1",
    "enzyme": "^3.11.0",
    "enzyme-to-json": "^3.6.2",
    "eslint-config-airbnb": "18.2.1",
    "eslint-config-airbnb-typescript": "12.0.0",
    "eslint-config-prettier": "7.1.0",
    "eslint-config-react-app": "6.0.0",
    "eslint-import-resolver-typescript": "2.3.0",
    "eslint-loader": "4.0.2",
    "eslint-plugin-flowtype": "5.2.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-plugin-json": "^2.1.2",
    "eslint-plugin-jsx-a11y": "6.4.1",
    "eslint-plugin-prettier": "3.3.1",
    "eslint-plugin-react": "7.22.0",
    "eslint-plugin-react-hooks": "4.2.0",
    "framer-motion": "^4.1.17",
    "jest": "^27.3.1",
    "prettier": "2.2.1",
    "prettier-eslint": "12.0.0",
    "prettier-eslint-cli": "5.0.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "recoil": "^0.5.2",
    "release-it": "^15.3.0",
    "release-it-lerna-changelog": "^5.0.0",
    "release-it-yarn-workspaces": "^3.0.0",
    "rollup": "^2.53.0",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-typescript2": "^0.31.0",
    "ts-jest": "^27.0.7",
    "typescript": "^4.3.5"
  },
  "resolutions": {
    "**/react": "17.0.1",
    "**/react-dom": "17.0.1"
  },
  "scripts": {
    "copy-readme": "cpy ./README.md ./packages/hypertheme-chakra-ui",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "bootstrap": "lerna bootstrap --use-workspaces",
    "clean": "lerna run clean",
    "build": "lerna run build --include-dependencies --stream && npm run copy-readme",
    "release": "release-it",
    "release-rc": "release-it --preRelease=rc",
    "release-dev": "release-it --preRelease=dev",
    "deploy": "yarn build && yarn release",
    "deploy-rc": "yarn build && yarn release-rc",
    "deploy-dev": "yarn build && yarn release-dev",
    "test:unit": "jest",
    "test-watch:unit": "jest --watch",
    "test-watch": "yarn test-watch:unit",
    "test": "yarn test:unit"
  },
  "devDependencies": {
    "lerna": "^5.5.2"
  },
  "release-it": {
    "plugins": {
      "release-it-yarn-workspaces": true,
      "release-it-lerna-changelog": {
        "infile": "CHANGELOG.md",
        "launchEditor": true
      }
    },
    "npm": {
      "allowSameVersion": true
    },
    "git": {
      "requireCleanWorkingDir": false,
      "requireBranch": [
        "main",
        "support/0.1.x"
      ],
      "push": false
    },
    "github": {
      "release": true
    }
  },
  "version": "0.2.0-dev.2"
}
